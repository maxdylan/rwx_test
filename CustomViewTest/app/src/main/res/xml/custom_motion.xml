<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ConstraintSet android:id="@+id/starting_set">
        <Constraint
            android:id="@+id/flContainer"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="#cccccc"
            app:layout_constraintBottom_toTopOf="parent" />

        <Constraint
            android:id="@+id/vNaviBg"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="#000"
            app:layout_constraintTop_toBottomOf="@+id/flContainer" />

        <Constraint
            android:id="@+id/ivIcon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="20dp"
            android:src="@mipmap/ic_launcher"
            app:layout_constraintBottom_toBottomOf="@+id/vNaviBg"
            app:layout_constraintLeft_toLeftOf="@+id/vNaviBg"
            app:layout_constraintTop_toTopOf="@+id/vNaviBg" />

        <Constraint
            android:id="@+id/tvDistance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="200m"
            android:textColor="#fff"
            android:textSize="30sp"
            app:layout_constraintBottom_toTopOf="@+id/tvAddress"
            app:layout_constraintLeft_toRightOf="@id/ivIcon"
            app:layout_constraintTop_toTopOf="@+id/vNaviBg"
            app:layout_constraintVertical_chainStyle="packed" />

        <Constraint
            android:id="@+id/tvAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="天华路口西"
            android:textColor="#fff"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/vNaviBg"
            app:layout_constraintLeft_toLeftOf="@+id/tvDistance"
            app:layout_constraintTop_toBottomOf="@+id/tvDistance" />

        <Constraint
            android:id="@+id/ivOther1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="40dp"
            android:src="@mipmap/ic_launcher"
            app:layout_constraintBottom_toBottomOf="@+id/vNaviBg"
            app:layout_constraintRight_toLeftOf="@+id/ivOther2"
            app:layout_constraintTop_toTopOf="@+id/vNaviBg" />
        <Constraint
            android:id="@+id/ivOther2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="40dp"
            android:src="@mipmap/ic_launcher"
            app:layout_constraintBottom_toBottomOf="@+id/vNaviBg"
            app:layout_constraintRight_toLeftOf="@+id/ivOther3"
            app:layout_constraintTop_toTopOf="@+id/vNaviBg" />
        <Constraint
            android:id="@+id/ivOther3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="40dp"
            android:src="@mipmap/ic_launcher"
            app:layout_constraintBottom_toBottomOf="@+id/vNaviBg"
            app:layout_constraintRight_toRightOf="@+id/vNaviBg"
            app:layout_constraintTop_toTopOf="@+id/vNaviBg" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/ending_set">
        <Constraint
            android:id="@+id/flContainer"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="#cccccc"
            app:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@+id/vNaviBg"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="#000"
            app:layout_constraintTop_toBottomOf="@+id/flContainer" />

        <Constraint
            android:id="@+id/ivIcon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:src="@mipmap/ic_launcher"
            app:layout_constraintBottom_toBottomOf="@+id/vNaviBg"
            app:layout_constraintLeft_toLeftOf="@+id/vNaviBg"
            app:layout_constraintTop_toTopOf="@+id/vNaviBg" />

        <Constraint
            android:id="@+id/tvDistance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="200m"
            android:textColor="#fff"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="@+id/vNaviBg"
            app:layout_constraintLeft_toRightOf="@id/ivIcon"
            app:layout_constraintTop_toTopOf="@+id/vNaviBg" />

        <Constraint
            android:id="@+id/tvAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="天华路口西"
            android:textColor="#fff"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/vNaviBg"
            app:layout_constraintLeft_toRightOf="@id/tvDistance"
            app:layout_constraintTop_toTopOf="@+id/vNaviBg" />

        <Constraint
            android:id="@+id/ivOther1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="40dp"
            android:src="@mipmap/ic_launcher"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/vNaviBg"
            app:layout_constraintRight_toLeftOf="@+id/ivOther2"
            app:layout_constraintTop_toTopOf="@+id/vNaviBg" />
        <Constraint
            android:id="@+id/ivOther2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="40dp"
            android:src="@mipmap/ic_launcher"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/vNaviBg"
            app:layout_constraintRight_toLeftOf="@+id/ivOther3"
            app:layout_constraintTop_toTopOf="@+id/vNaviBg" />
        <Constraint
            android:id="@+id/ivOther3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="40dp"
            android:src="@mipmap/ic_launcher"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/vNaviBg"
            app:layout_constraintRight_toRightOf="@+id/vNaviBg"
            app:layout_constraintTop_toTopOf="@+id/vNaviBg" />
    </ConstraintSet>
    <Transition
        android:id="@+id/myTransition"
        app:constraintSetStart="@+id/starting_set"
        app:constraintSetEnd="@+id/ending_set"
        app:duration="800">
        <KeyFrameSet>
            <KeyPosition app:motionTarget="@+id/flContainer"
                app:framePosition="90"
                app:keyPositionType="parentRelative"
                app:percentX="0"
                app:percentY="0.8"/>
            <KeyPosition app:motionTarget="@+id/vNaviBg"
                app:framePosition="90"
                app:keyPositionType="parentRelative"
                app:percentX="0"
                app:percentY="0.8"/>
            <KeyPosition app:motionTarget="@+id/ivIcon"
                app:framePosition="90"
                app:keyPositionType="parentRelative"
                app:percentX="0"
                app:percentY="0.8"/>
            <KeyPosition app:motionTarget="@+id/tvDistance"
                app:framePosition="90"
                app:keyPositionType="parentRelative"
                app:percentX="0"
                app:percentY="0.8"/>
            <KeyPosition app:motionTarget="@+id/tvAddress"
                app:framePosition="90"
                app:keyPositionType="parentRelative"
                app:percentX="0"
                app:percentY="0.8"/>
            <KeyPosition app:motionTarget="@+id/ivOther1"
                app:framePosition="90"
                app:keyPositionType="parentRelative"
                app:percentX="0"
                app:percentY="0.8"/>
            <KeyPosition app:motionTarget="@+id/ivOther2"
                app:framePosition="90"
                app:keyPositionType="parentRelative"
                app:percentX="0"
                app:percentY="0.8"/>
            <KeyPosition app:motionTarget="@+id/ivOther3"
                app:framePosition="90"
                app:keyPositionType="parentRelative"
                app:percentX="0"
                app:percentY="0.8"/>
        </KeyFrameSet>
    </Transition>
</MotionScene>